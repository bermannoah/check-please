<!DOCTYPE html>
<html>
  <head>
    <title>Check Please!</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application_css', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
      <div>
        <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="brand-logo navbar-brand" href="/">Check Please!</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-right">
                <button type="button" class="btn btn-default navbar-btn login-button-margin">Login</button>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
      </div>
      <br/>
      <br/>
      <div>
        <nav class="navbar navbar-default navbar-fixed-top menu-nav">
          <div class="container-fluid">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav menu-nav-selectors">
                <% @categories.each do |category| %>
                <li class="menu-nav-selectors"> <%= link_to category.name, category_name_path(category.name) %> </li>
                <% end %>
                <%= link_to orders_path do %>
                  <button type="button" class="btn btn-success glyphicon glyphicon-shopping-cart glyphicon-button-fix"><span class="order-button-font" id="navbar-order">Order</span></button>
                <% end %>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
      </div>

        <div class="container center-content">
          <%= yield %>
        </div>
        
  </body>
</html>
