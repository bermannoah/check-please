<%= form_for [:admin, @item], multipart: true do |f| %>
  <div class="field">
    <%= f.label :name, class: "field-label" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price, class: "field-label" %>
    <%= f.number_field :price, :step => "0.01" %>

  </div>
  <div class="field">
    <ul class="field-catg-list">
      <li><%= f.label :category %></li>
      <li><%= f.collection_select :category_id, Category.all, :id, :name %></li>
    </ul>
  </div>
  <div class="field">
    <ul class="field-list">
      <li><%= f.label :avatar %></li>
      <li><%= f.file_field :avatar %></li>
    </ul>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', class: "btn btn-success" %>
  </div>
<% end %>
