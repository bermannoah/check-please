<%= form_for [:admin, @item], multipart: true do |f| %>
  <div class="field">
    <%= f.label :name, class: "field-label" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price, class: "field-label" %>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <ul class="field-list">
      <li><%= f.label :avatar %></li>
      <li><%= f.file_field :avatar %></li>
    </ul>
  </div>
  <div class="actions">
    <%= f.submit 'Make an item', class: "btn btn-success" %>
  </div>
<% end %>
